@model GameReviews.Models.CommentViewModel

<div class="comment-form">
    @using (Html.BeginForm("Add", "Comments", FormMethod.Post)) {
        @Html.AntiForgeryToken()
        @Html.Hidden("GameId", Model.GameId)
        <div class="">
            @Html.TextAreaFor(m => m.Comment, new { @class = "comment-text", placeholder = "What are your thoughts?" })
            <input type="submit" name="btnRegister" value="comment" class="btn-submit" />
        </div>
    }
</div>

<style>
    .comment-form {
        display: flex;
        flex-direction: row;
        width: 50%;
    }

    .comment-text {
        background-color: rgba(0, 0, 0, 0.5);
        border: none;
        border-bottom: 3px solid rgb(102, 192, 244);
        border-radius: 5px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
        width: 100%;
        height: 100px;
        resize: none;
    }

    .btn-submit {
        display: inline-block;
        padding: 0em 1em;
        border: 0.2em solid #FFFFFF;
        margin: 0 0.3em 0.3em 0;
        border-radius: 0.12em;
        box-sizing: border-box;
        text-decoration: none;
        font-family: 'Roboto',sans-serif;
        font-weight: 300;
        color: white;
        text-align: center;
        transition: all 0.2s;
        background-color: rgba(27, 28, 38, 0.5);
    }

        .btn-submit:hover {
            color: white;
            background-color: rgba(102, 192, 244, 1);
        }

    /*         background-color: rgba(102, 192, 244, 0.5); */
</style>

